library(dplyr)
library(stringr)
library(ggplot2)
library(shiny)
library(plotly)
library(shinythemes)

df <- read.csv("final_df.csv")
regions_df <- read.csv("USAregions copy.csv")
complete_df <- left_join(df, regions_df, by = c("State" = "Name"))



